@import "../layout/layoutVars"

/* Header */
.g-collection-list-header
  display flex
  justify-content flex-start
  align-items center
  flex-wrap wrap
  margin 10px 0

  .g-collection-search-form
    flex 1

@media (max-width: $smallWidth)
  .g-collection-create-button >span
    display none

/* Body */
.g-collection-list-entry
  display flex
  justify-content flex-start

  .g-collection-title
    font-size $resourceTitleSize

  .g-top-level-list-title-container
    flex 1

  .g-collection-description
    background-color white
    padding 8px 12px
    border-radius 3px
    border $border

  .g-collection-right-column
    overflow hidden
    white-space: nowrap
    padding-left 8px
    width $rightColumnWidth
    font-size 14px
    color $lightColor

  .g-collection-created-date, .g-user-space-used
    color $normalColor

/* Footer */ // This code is the same for Collection list, User list and Group list
.g-collection-list-footer
  margin 15px 0

  .g-collection-pagination

    .pagination>li>a
      line-height 1.5
      padding 7px 12px
