@import "../layout/layoutVars"

.g-frontpage-header
  display flex
  justify-content center
  background-color $secondaryBackgroundColor
  padding ($headerHeight / 2) 0

  .g-frontpage-title-container
    display inline-block
    margin-left 12px

    .g-frontpage-title
      font-weight 600
      font-size 40px
      color $baseColor

    .g-frontpage-subtitle
      font-size 25px
      margin-left 2px

  .g-frontpage-logo-container
    position relative
    display inline-block
    vertical-align top
    width 82px
    height 82px

    .g-frontpage-logo
      max-width 82px
      max-height 82px
      // absolute allows top / transform to work
      position absolute
      // center image vertically and horizontally
      left 50%
      top 50%
      transform translate(-50%, -50%)

.g-frontpage-body
  display flex
  justify-content center

  margin-top 10px


  .g-frontpage-paragraph
    line-height 2
    max-width 800px
    border-radius 2px
    border $border
    padding 12px
